<body>
    <div class="container">
        <h2>حاسبة سعر الخروف</h2>
        <label for="weight">أدخل وزن الخروف بالكيلوجرام:</label>
        <input type="number" id="weight" placeholder="مثال: 50" min="1">
        <button onclick="calculatePrice()">احسب السعر</button>
        <p class="result" id="result"></p>
    </div>
    
    <script>
        function calculatePrice() {
            let weight = document.getElementById("weight").value;
            if (weight <= 0 || isNaN(weight)) {
                document.getElementById("result").innerText = "الرجاء إدخال وزن صالح";
                return;
            }
            let a = 11.67;
            let b = 850;
            let price = (a * weight) + b;
            let pricePerKg = price / weight;
            document.getElementById("result").innerText = `السعر الكلي: ${price.toFixed(2)} ريال \n سعر الكيلوجرام: ${pricePerKg.toFixed(2)} ريال`;
        }
    </script>
</body>
